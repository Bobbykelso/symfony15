{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<h1>Nom de la serie :
		{{ program.title }}</h1>
	<h2>Saison :
		{{ season.number }}</h2>
	<h3>Episode
		{{ episode.number }}
		:
		{{ episode.title }}</h3>

	<p>Résumé de l'épisode :
		{{ episode.synopsis }}</p>

	<div>
		<a href="{{ path('program_season_show', {programId: program.id, seasonId:season.id}) }}">Retour à la liste d'épisodes de la saison</a>
		<br>Ou<br>
		<a href="{{ path('program_show', { id: program.id }) }}">Retour à la fiche détaillée
		</a>
		<br>Ou<br>
		<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>
	</div>

{% endblock %}

